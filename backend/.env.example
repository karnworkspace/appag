# Node Environment
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://admin:devpass123@mongodb:27017/taskmanager?authSource=admin
MONGO_PASSWORD=devpass123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Google OAuth 2.0 Configuration
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Gmail API Configuration
GMAIL_USER=your-gmail-address@gmail.com
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (optional, for session store)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Cors Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Notification Settings
NOTIFICATION_CHECK_INTERVAL=300000
REMINDER_ADVANCE_TIME=900000

# API Keys (optional)
OPENAI_API_KEY=
SENDGRID_API_KEY=

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_GMAIL_SYNC=true
ENABLE_CALENDAR_SYNC=true

# Security
BCRYPT_ROUNDS=10
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax
